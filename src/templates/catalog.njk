{% extends "partials/layout.njk" %}

{% block main %}
<div class="inner-wrap">
	<div class="container">
		<h1 class="page-title">Подобрать дизельный генератор</h1>

		<div class="filters-wrap">
			<form class="filter-form">
				<div class="filter">
					<div class="row">
						<div class="col-md-12">
							<h4 class="filter_title">1. Выбирете мощность:</h4>
						</div>
						<div class="col-md-12">
							<div class="filter_group">
								<input name="scale" id="range-slider" value="0,0" />
							</div>
						</div>
					</div>
				</div>
				<div class="filter">
					<div class="row">
						<div class="col-md-3">
							<h4 class="filter_title">2. Выбирете вид топлива:</h4>
						</div>
						<div class="col-md-9">
							<div class="filter_group">
								<div class="filter_item all">
									<label class="check-all">
										<input type="checkbox" data-select-all="fuel">
										<span>Все</span>
									</label>
								</div>
								<div class="filter_item">
									<label class="checkbox">
										<input type="checkbox" name="fuel"><span></span>Дизель
									</label>
								</div>
								<div class="filter_item">
									<label class="checkbox">
										<input type="checkbox" name="fuel"><span></span>Бензин
									</label>
								</div>
								<div class="filter_item">
									<label class="checkbox">
										<input type="checkbox" name="fuel"><span></span>Газ
									</label>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="filter">
					<div class="row">
						<div class="col-md-3">
							<h4 class="filter_title">3. Выбирете производителя:</h4>
						</div>
						<div class="col-md-9">
							<div class="filter_group">
								<div class="filter_item all">
									<label class="check-all">
										<input type="checkbox" data-select-all="manufacturer">
										<span>Все</span>
									</label>
								</div>
								<div class="filter_item">
									<label class="checkbox">
										<input type="checkbox" name="manufacturer"><span></span><img src="images/flag-britain.png">
									</label>
								</div>
								<div class="filter_item">
									<label class="checkbox">
										<input type="checkbox" name="manufacturer"><span></span><img src="images/flag-turkey.png">
									</label>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="filter">
					<div class="row">
						<div class="col-md-3">
							<h4 class="filter_title">4. Выбирете двигатель:</h4>
						</div>
						<div class="col-md-9">
							<div class="filter_group">
								<div class="filter_item all">
									<label class="check-all">
										<input type="checkbox" data-select-all="engine">
										<span>Все</span>
									</label>
								</div>
								<div class="filter_item">
									<label class="checkbox">
										<input type="checkbox" name="engine"><span></span>Perkins
									</label>
								</div>
								<div class="filter_item">
									<label class="checkbox">
										<input type="checkbox" name="engine"><span></span>MTU
									</label>
								</div>
								<div class="filter_item">
									<label class="checkbox">
										<input type="checkbox" name="engine"><span></span>Scania
									</label>
								</div>
								<div class="filter_item">
									<label class="checkbox">
										<input type="checkbox" name="engine"><span></span>Deutz
									</label>
								</div>
								<div class="filter_item">
									<label class="checkbox">
										<input type="checkbox" name="engine"><span></span>Perkins
									</label>
								</div>
								<div class="filter_item">
									<label class="checkbox">
										<input type="checkbox" name="engine"><span></span>MTU
									</label>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="filter-wrap-bottom">
					<button class="link-btn large-btn">Подобрать генератор</button>
				</div>
			</form>
		</div>

		<div class="row">
			<div class="col-sm-7">
				<div class="search-result-info">
					<p>Результаты поиска: <span>129</span> генераторов</p>
					<a href="#" class="link-btn large-btn">Показать все</a>
				</div>
			</div>
			<div class="col-sm-5">
				<div class="pagination-wrap right">
					<ul class="pagination">
						<li class="pagination_item prev"><a href="#" class="pagination_item-link"><span class="prev-icon"></span></a></li>
						<li class="pagination_item active"><a href="#" class="pagination_item-link">1</a></li>
						<li class="pagination_item"><a href="#" class="pagination_item-link">2</a></li>
						<li class="pagination_item"><a href="#" class="pagination_item-link">3</a></li>
