					<input type="text" name="name" class="form-input" placeholder="Ваше имя">
					<input type="text" name="phone" class="form-input" placeholder="Телефона">
					<input type="text" name="email" class="form-input" placeholder="Почта">
				</div>
				<textarea class="form-input" name="message" placeholder="Сообщение"></textarea>
			</div>
			<button class="form_submit" type="submit">Отправить</button>
		</form>
	</section>
	
